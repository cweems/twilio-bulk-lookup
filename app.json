{
    "name": "Twilio Bulk Lookup",
    "description": "A simple Rails app that takes a CSV of phone numbers and runs a Twilio Lookup.",
    "stack": "heroku-20",
    "repository": "https://github.com/cweems/twilio-bulk-lookup",
    "addons": [
        "heroku-redis:hobby-dev",
        "heroku-postgresql:hobby-dev"
    ],
    "formation": {
        "web": {
            "quantity": 1,
            "size": "free"
        },
        "apiworker": {
            "quantity": 1,
            "size": "free"
        }
    },
    "scripts": {
        "postdeploy": "bundle exec sidekiq -c 10"
    },
    "keywords": [
        "Twilio",
        "Lookup",
        "Phone Number Validation",
        "Ruby"
    ]
}
